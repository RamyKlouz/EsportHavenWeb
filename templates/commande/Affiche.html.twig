{% extends 'header.oc.html.twig' %}

{% block title %}Afficher Les commandes{% endblock %}

{% block body %}
    <h1>Liste des Commandes</h1>

<table class="table align-items-center ">
    <tr>
        <th>Référence</th><th>Client</th><th>Somme totale</th><th>Suppression</th>
    </tr>

    {% for c in cc  %}
        <tr>
            <td>{{ c.orderid }}</td>
            <td>{{ c.client }}</td>
            <td>{{ c.somme }}</td>
            <td><button type="button" class="btn btn-danger"><a href="{{ path('DO',{'id':c.orderid})  }}">Supprimer</a></button></td>

        </tr>
    {% endfor %}

</table>
    <button type="button" class="btn btn-info"><a href="{{ path('app_produit') }}">Retour</a></button>
{% endblock %}
