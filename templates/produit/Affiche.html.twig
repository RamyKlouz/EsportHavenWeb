{% extends 'header.oc.html.twig' %}



{% block title %}Afficher Produits{% endblock %}

{% block body %}
    <h1>Liste des Produits</h1>

<table border="1">
    <tr>
        <th>Name</th><th>Type</th><th>Marque</th><th>Quanti√©</th><th>Prix</th><th>Code QR</th><th>Modification</th><th>Suppression</th>
    </tr>

    {% for c in cc  %}
        <tr>
            <td>{{ c.nom }}</td>
            <td>{{ c.type }}</td>
            <td>{{ c.marque }}</td>
            <td>{{ c.quantite }}</td>
            <td>{{ c.prix}}</td>
            <td><!-- Button trigger modal -->
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
