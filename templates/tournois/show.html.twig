{% extends 'header.oc.html.twig' %}

{% block title %}Tournois{% endblock %}

{% block body %}
    <h1><a href="{{ path('app_tournois_index') }}" class="btn btn-primary" type="button" style="border-radius: 50%">←</a> Détails du Tournoi</h1>

    <table class="table">
        <tbody>

            <tr>
                <th>Nom</th>
                <td>{{ tournoi.nom }}</td>
            </tr>
            <tr>
                <th>NbEquipes</th>
                <td>{{ tournoi.nbEquipes }}</td>
            </tr>
            <tr>
                <th>DateDeb</th>
                <td>{{ tournoi.dateDeb ? tournoi.dateDeb|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DateFin</th>
                <td>{{ tournoi.dateFin ? tournoi.dateFin|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Jeux</th>
                <td>{{ tournoi.jeux }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-danger" href="{{ path('app_tournois_edit', {'id': tournoi.id}) }}">Edit</a>

    {{ include('tournois/_delete_form.html.twig') }}
{% endblock %}
